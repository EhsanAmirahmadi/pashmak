--test--
variable defining system is working
--file--
set $myvar
set $var1 $var2
set $v3 $aaa $hoho
set $var1
set $test; mem 'hello'; copy $test;
print $test; set $test; print $test;
$x = 'the value'
$y
$a1 = 'parsa';
$a2 = 'hello ' + $a1 + '\n';
print $a2;
mem 'hi mem'
$themem = ^

func testfunc $n
mem 'the func' + $n
endfunc

$s = ^ testfunc 'A'
--vars--
{
            'myvar': None,
            'var1': None,
            'var2': None,
            'v3': None,
            'aaa': None,
            'hoho': None,
            'test': 'hello',
            'x': 'the value',
            'y': None,
            'a1': 'parsa',
            'a2': 'hello parsa\n',
            'themem': 'hi mem',
            's': 'the funcA'
}
--output--
'hellohellohello parsa\n'