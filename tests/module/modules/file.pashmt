--test--
file module is working
--file--
import '@file'
$tmp_file
py "import tempfile, random\; self.mem = tempfile.gettempdir().replace('\\\\', '/') + '/' + 'pashmak-test-file-' + str(random.random())"
copy $tmp_file

file.open [$tmp_file, 'w']
set $file; copy $file

file.write [$file, "content of file"]
file.close $file

file.open [$tmp_file, 'r']
copy $file
file.read $file; out ^
file.close $file

py 'os.remove("' + $tmp_file + '")'
--output--
'content of file'
