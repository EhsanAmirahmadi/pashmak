--test--
function can be used as variable

--file--
func hello($name)
    println 'hello ' + $name
endfunc

hello('parsa')

$myfunc = hello

$myfunc('pashmak')

func somefunc()
    println 'hello. I was runed'
endfunc

$myfunc = somefunc
$myfunc()

func run_the_func($func)
    println('start')
    $func()
    println('finish')
endfunc

func hi()
    println 'hello world'
endfunc

run_the_func(hi)

--output--
"""hello parsa
hello pashmak
hello. I was runed
start
hello world
finish
"""