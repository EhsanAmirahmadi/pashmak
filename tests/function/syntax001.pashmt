--test--
function declaration syntax is not sensitive to whitespaces

--file--
func hello1
    println 'hello world'
endfunc

func hello2 $name
    println('hello ' + $name)
endfunc

func hello3 (   $name        )
    println 'hello ' + $name
endfunc

func hello4($name)
    println 'hello ' + $name
endfunc

func hello5(   $name     )
    println 'hello ' + $name
endfunc

hello1()
hello2 '2'
hello3('3')
hello4 ('4')
hello5  '5'
