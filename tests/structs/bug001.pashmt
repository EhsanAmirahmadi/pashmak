--test--
tests "linked struct self to instances" bug

--file--

struct Person
    $name; $age = 10
endstruct

$p1 = ^ new Person
$p1->age = 20

$p2 = ^ new Person
$p2->age = 77

println self.structs['Person'].props
println $p1->age
println $p2->age

--output--
"""{'name': None, 'age': 10}
20
77
"""
